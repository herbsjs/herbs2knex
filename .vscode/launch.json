    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Core Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "--recursive",
                "${workspaceFolder}/test/unit"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DB Tests mssql",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "--recursive",
                "${workspaceFolder}/test/integration/mssql"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        }
        ,
        {
            "type": "node",
            "request": "launch",
            "name": "DB Tests mysql",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "--recursive",
                "${workspaceFolder}/test/integration/mysql"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
